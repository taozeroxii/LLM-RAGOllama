# Google Gemini API Key (get from https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (fallback when Gemini quota exhausted)
# Install Ollama from https://ollama.ai/ and run: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Admin password for document management
ADMIN_PASSWORD=admin123

# Server port
PORT=3000

# LLM Provider: 'gemini' or 'ollama' or 'auto' (auto will fallback to ollama if gemini fails)
LLM_PROVIDER=auto
